              <input type="text" id="email" name="email"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-blue-200"
                required>
            </div>
            <div class="mb-4">
              <label for="phone" class="block text-gray-700 font-bold mb-2">Phone Number:</label>
              <input type="text" id="phone" name="phone"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-blue-200"
                required>
            </div>
            <div class="mb-4">
              <label for="license" class="block text-gray-700 font-bold mb-2">Driver License:</label>
              <input type="text" id="license" name="license"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-blue-200"
                required>
            </div>
            <div class="mb-4">
              <label for="vehicle" class="block text-gray-700 font-bold mb-2">Vehicle Number:</label>
              <input type="text" id="vehicle" name="vehicle"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-blue-200"
                required>
            </div>
           
            <div class="mb-4">
              <label for="password" class="block text-gray-700 font-bold mb-2">Password:</label>
              <input type="password" id="password" name="password"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-blue-200"
                required>
            </div>
            <div class="mb-6">
              <label for="confirmPassword" class="block text-gray-700 font-bold mb-2">Confirm Password:</label>
              <input type="password" id="confirmPassword" name="confirmPassword"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-blue-200"
                required>
            </div>
            <div class="flex justify-center">
              <input type="submit" value="Add Driver"
                class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full">
            </div>
          </form>
        </div>

      </div>
    </div>


    <script>
      const driverForm = document.getElementById('driverForm');

      const responseModal = document.getElementById('responseModal');
      const modalTitle = document.getElementById('modalTitle');
      const modalMessage = document.getElementById('modalMessage');
      const closeModalBtn = document.getElementById('closeModal');

      driverForm.addEventListener('submit', async (event) => {
        event.preventDefault();
        const form = document.forms.driverForm;

        const formData = new FormData(form);

        const formDataObject = {};

        // Convert form data to object
        formData.forEach((value, key) => {
          formDataObject[key] = value;
        });


        const response = await fetch('/admin/create-driver', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json' // Specify content type as JSON
          },
          body: JSON.stringify(formDataObject)
        });

        const responseData = await response.text();


        modalTitle.textContent = 'Response';
        modalMessage.textContent = responseData;
        responseModal.classList.remove('hidden');
      });

      closeModalBtn.addEventListener('click', () => {
        responseModal.classList.add('hidden');
        location.reload()
      });
    </script>

